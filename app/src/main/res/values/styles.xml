<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Button">
        <item name="android:textColor">@drawable/white</item>
        <item name="android:layout_margin">2dp</item>
    </style>
    <style name="TextViewLikeInput">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">50dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:background">@drawable/color_white</item>
    </style>
    <style name="DialogTitle">
        <item name="android:textColor">@drawable/color_white</item>
        <item name="android:paddingTop">10sp</item>
        <item name="android:paddingLeft">10sp</item>
        <item name="android:paddingBottom">10sp</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
